<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Events</h1>

  <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Datum</th>
      <th scope="col">Ort</th>
      <th scope="col">Land</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td> <%= event.date %> </td>
        <td> <%= event.place %> </td>
        <td> <%= event.country %> </td>
        <% if !spree_current_user.blank? && spree_current_user.spree_roles.first.name == "admin" %>
          <td> <%= link_to edit_event_path(event) do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to event, method: :delete, data: { confirm: 'Bist du sicher?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>
  <% if !spree_current_user.blank? && spree_current_user.spree_roles.first.name == "admin" %>
    <%= link_to '+ Ski-Test hinzufÃ¼gen', new_event_path, class:"button_2" %>
  <% end %>
</div>
