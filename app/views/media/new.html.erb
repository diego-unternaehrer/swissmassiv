<div class="container">
  <%= simple_form_for(@medium) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :photo, label: "Vorschaubild", as: :file %>
    </div>
    <%= f.input :title, label: "Beschreibung / Titel" %>
    <%= f.input :link, label: "Link" %>

    <div class="form-actions">
        <%= f.submit "Hinzufügen", class: "button_2" %>
    </div>
  <% end %>

  <br>
  <%= link_to 'Zurück', media_path %>
</div>
