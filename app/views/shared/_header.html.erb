<nav class="site-header sticky-top py-3">
  <div class="d-flex justify-content-around align-items-center layer_1">
    <%= link_to main_app.skis_path do %>
     <p class="d-block header-icon"> <i class="fas fa-skiing"></i> </p>
     <p class="d-block header-text-small"> Skis </p>
    <% end %>
    <%= link_to spree.nested_taxons_path("equipment") do %>
      <p class="d-block header-icon"> <i class="fas fa-tshirt"></i> </p>
      <p class="d-block header-text-small"> <%= t('equipment') %>  </p>
    <% end %>
    <%= link_to main_app.about_path, class: "p-2" do %>
      <p class="d-block header-icon"> <%= fa_icon "info-circle" %> </p>
      <p class="d-block header-text-small"> <%= t('about') %> </p>
    <% end %>
    <%= link_to root_path, class: "p-2" do %>
      <%= image_tag ("logo_handmade_white.PNG"), style: "height: 40px;" %>
    <% end %>
    <% unless spree_current_user.blank? %>
      <%= link_to spree.account_path(spree_current_user.id) do %>
        <p class="d-block header-icon"> <%= fa_icon "user" %> </p>
        <p class="d-block header-text-small"> Account </p>
      <% end %>
    <% else %>
      <%= link_to spree.new_spree_user_session_path do %>
        <p class="d-block header-icon"> <%= fa_icon "user" %> </p>
        <p class="d-block header-text-small"> Account </p>
      <% end %>
    <% end %>
    <%= link_to spree.cart_path do %>
      <p class="d-block header-icon"> <%= fa_icon "shopping-cart" %> </p>
      <p class="d-block header-text-small"> <%= t('cart') %> </p>
    <% end %>
    <div class="dropdown">
      <button class="dropdown-toggle" style="background-color: #0b0b0b; color: white; border: none;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= fa_icon "language" %>
        <p class="d-block header-text-small"> <%= I18n.locale.to_s %> </p>
      </button>
      <div class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton">
        <% unless I18n.locale == :de %>
          <%= link_to "Deutsch", url_for( locale: "de" ), class: "dropdown-item", style: "background-color: #0b0b0b;"%>
        <% end %>
        <% unless I18n.locale == :en %>
          <%= link_to "English", url_for( locale: "en" ), class: "dropdown-item", style: "background-color: #0b0b0b;"%>
        <% end %>
      </div>
    </div>
  </div>
</nav>
<%# render partial: 'spree/shared/main_nav_bar' if store_menu? %>
