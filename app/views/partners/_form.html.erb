<%= simple_form_for(@partner) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Name" %>
    <%= f.input :address, label: "Adresse" %>
    <%= f.input :zip_code, label: "PLZ" %>
    <%= f.input :place, label: "Ort" %>
    <% Carmen.i18n_backend.locale = :de %>
    <%= f.input :country, label: "Land", collection: Carmen::Country.all, prompt: :translate %>
    <%= f.input :link, label: "Webseite" %>
  </div>

  <div class="form-actions">
    <% if params[:action] == "edit" %>
      <%= f.submit "#{@partner.name} aktualisieren", class: "button_2" %>
    <% else %>
      <%= f.submit "HinzufÃ¼gen", class: "button_2" %>
    <% end %>
  </div>
<% end %>
