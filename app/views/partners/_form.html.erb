<%= simple_form_for(@partner) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :zip_code %>
    <%= f.input :place %>
    <%= f.input :country, collection: Carmen::Country.all, prompt: :translate %>
    <%= f.input :link %>
  </div>

  <div class="form-actions">
    <% if params[:action] == "edit" %>
      <%= f.submit "#{@partner.name} aktualisieren", class: "button_2" %>
    <% else %>
      <%= f.submit "HinzufÃ¼gen", class: "button_2" %>
    <% end %>
  </div>
<% end %>
