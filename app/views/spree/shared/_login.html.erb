<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <div id="password-credentials">
    <p>
      <%= f.label :email, I18n.t('spree.email') %><br />
      <%= f.email_field :email, class: 'form-control', tabindex: 1, autofocus: true %>
    </p>
    <p>
      <%= f.label :password, I18n.t('spree.password') %><br />
      <%= f.password_field :password, class: 'form-control', tabindex: 2 %>
    </p>
  </div>
  <p>
    <%= f.check_box :remember_me, tabindex: 3 %>
    <%= f.label :remember_me, I18n.t('spree.remember_me') %>
  </p>

  <p><%= f.submit I18n.t('spree.login'), class: 'button_2', tabindex: 4 %> &nbsp;|&nbsp; <%= link_to I18n.t('spree.forgot_password'), spree.recover_password_path %> </p>
<% end %>
