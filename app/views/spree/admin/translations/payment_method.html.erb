<% content_for :page_title do %>
  <%= t(:'spree.editing_resource', resource: Spree::PaymentMethod.model_name.human) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to t(:'spree.back_to_resource_list', resource: Spree::PaymentMethod.model_name.human), spree.admin_payment_methods_path, class: 'btn btn-primary' %>
<% end %>


<%= render 'settings' %>

<div class="row translations">
  <div class="col-md-4">
    <%= render 'fields' %>
  </div>
  <div class="col-md-8">
    <%= form_for @payment_method, as: :payment_method, url: spree.admin_payment_method_path(@payment_method) do |f| %>
      <%= render 'form_fields', f: f %>
      <%= render 'spree/admin/shared/edit_resource_links' %>
    <% end %>
  </div>
</div>
