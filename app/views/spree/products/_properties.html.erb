<% unless @product_properties.empty? %>
  <table id="product-properties" class="table table-borderless text-white" data-hook>
    <tbody>
      <% @product_properties.each do |product_property| %>
        <% css_class = cycle('even', 'odd', name: "properties") %>
        <tr class="<%= css_class %>">
          <th scope="row"><strong><%= product_property.property.presentation %></strong></th>
          <td><%= product_property.value %></td>
        </tr>
      <% end %>
      <% reset_cycle('properties') %>
    </tbody>
  </table>
<% end %>
