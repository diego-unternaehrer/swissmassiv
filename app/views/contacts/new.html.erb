<div class="contact-items">
  <div class="contact-item">
    <div>
      <p>swissmassiv</p>
      <p>René Unternährer</p>
      <p>Entlebucherstrasse 7</p>
      <p>6112 Doppleschwand</p>
      <p><%= fa_icon "at" %> rene@swissmassiv.ch</p>
      <p><%= fa_icon "phone alt" %>  +41 78 667 78 32</p>
    </div>
    <div id="contact">
      <%= simple_form_for(@contact) do |f| %>
          <div class="col-12">
          <%= f.label :name %></br>
          <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>
          </div>
          <div class="col-12">
          <%= f.label :email %></br>
          <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>
          </div>
          <div class="col-12">
          <%= f.label :phone %> <br>
          <%= f.text_field :phone, class: "contact-form-text-area"  %>
          </div>
          <div class="col-12">
          <%= f.label :message %></br>
          <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                            placeholder: "Send me a message"%></br>
          </div>
          <div class= "hidden">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
          </div>

          <%= f.submit 'Send Message', class: "button_2" %>
      <% end %>
    </div>
    <div class="col-md-6" id="flash-message">
      <%= render 'shared/flash' %>
    </div>
  </div>
  <div class="contact-item">
    <div id="map"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>


