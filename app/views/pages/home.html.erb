<% if I18n.locale == :de %>
  <div class="w-100 row justify-content-center py-5" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)), url(https://res.cloudinary.com/swissmassiv/image/upload/f_auto,q_auto/v1599604719/Assets/skitest_ngzqup.jpg); background-size: cover; background-position: center;">
    <div class="col-9 col-md-6 col-lg-4 py-5">
