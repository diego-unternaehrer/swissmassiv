  <div id="video-container" class="w-100 px-lg-5">
    <video id="eco-peak_video" class="w-100" autoplay muted loop>
      <source src="https://res.cloudinary.com/swissmassiv/video/upload/v1726688813/Swiss_Massiv_Crowdfunding_-_deutsch_mit_untert._mit_audio_zn57eu.mp4" type="video/mp4">
