<style>
  #video-container{
    position: relative;
  }

  #fullscreen {
    position: absolute;
    bottom: 30px;
    left: 30px;
    width: 20px;
  }
  #volume {
    position: absolute;
    bottom: 30px;
    right: 30px;
    width: 20px;
    height: 20px;
  }
  @media (min-width: 768px) {
    #volume {
      right: 60px;
    }
    #fullscreen {
      left: 60px;
    }
  }
  .icon {
    position: absolute;
    top:0;
    left: 0;
  }
  #on {
    opacity: 0;
  }
  #recycled {
    width: 100px;
  }
  #compostable {
    width: 100px;
  }
</style>
